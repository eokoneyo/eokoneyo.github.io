{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "strict": true,
    "module": "es2020",
    "target": "esnext",
    "lib": ["DOM", "WebWorker"],
    "typeRoots": [
      "./assets/_ata/node_modules/@types",
      "./assets/_ata/node_modules",
      "./node_modules/@types",
    ],
  },
  "exclude": ["node_modules", "_site"],
  "include": ["assets/_scripts/**/*.ts"],
}
